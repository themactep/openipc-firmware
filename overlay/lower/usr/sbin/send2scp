#!/bin/sh

plugin="ssh"

. /sbin/common-plugins

show_help() {
	echo "Usage: $0 [-h host] [-p port] [-u username] [-P password] [-d path] [-f file] [-v] [-h]
  -s host     SSH server FQDN or IP address.
  -p port     SSH server port.
  -d path     Directory on server, relative to SSH root.
  -f file     File to upload.
  -u username SSH username.
  -P password SSH password.
  -r          Use HEIF image format.
  -v          Verbose output.
  -h          Show this help.
"
	quit_clean 0
}

# override config values with command line arguments
while getopts d:f:p:P:rs:u:vh flag; do
	case "$flag" in
		d)
			ssh_path=$OPTARG
			;;
		f)
			ssh_file=$OPTARG
			;;
		p)
			ssh_port=$OPTARG
			;;
		P)
			ssh_password=$OPTARG
			;;
		r)
			ssh_use_heif="true"
			;;
		s)
			ssh_host=$OPTARG
			;;
		u)
			ssh_username=$OPTARG
			;;
		v)
			verbose="true"
			;;
		h | *)
			show_help
			;;
	esac
done

if [ "false" = "$ssh_enabled" ]; then
	log "Sending to SSH is disabled."
	quit_clean 10
fi

# validate mandatory values
if [ -z "$ssh_host" ]; then
	log "SSH host not found"
	quit_clean 11
fi

if [ -z "$ssh_port" ]; then
	log "SSH port not found"
	quit_clean 12
fi

if [ -z "$ssh_file" ]; then
	snapshot=/tmp/snapshot.jpg
	[ ! -f "$snapshot" ] && log "Cannot find a snapshot" && quit_clean 3

	attachment=$(mktemp -u /tmp/snapshot-XXXXXX).jpg
	delete_tempfile="true"
	cp $snapshot $attachment

	ssh_file=$attachment
fi

command="curl --verbose"
command="$command --connect-timeout $curl_timeout"
command="$command --max-time $curl_timeout"

# SOCK5 proxy, if needed
if [ "true" = "$ssh_socks5_enabled" ]; then
	. /etc/webui/socks5.conf
	command="$command --socks5-hostname ${socks5_host}:$socks5_port"
	command="$command --proxy-user ${socks5_login}:$socks5_password"
fi

command="$command --url ssh://"
[ -n "$ssh_username" ] && [ -n "$ssh_password" ] && command="${command}${ssh_username}:$ssh_password"
command="${command}@${ssh_host}:$ssh_port"
[ -n "$ssh_path" ] && command="${command}/${ssh_path// /%20}"
command="${command}/$(date +"$ssh_template")"
command="$command --upload-file $ssh_file"
command="$command --ssh-create-dirs"

log "$command"
eval "$command" >> "$LOG_FILE" 2>&1

[ "true" = "$delete_tempfile" ]  && [ -f "$attachment" ] && rm "$attachment"
[ "true" = "$verbose" ] && cat "$LOG_FILE"

quit_clean 0
