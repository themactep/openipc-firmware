#!/bin/sh

plugin="daynight"

. /sbin/common-plugins
singleton

STOP_FILE=/tmp/daynight.stop
MODE_FILE=/tmp/nightmode.txt

switch_to_day() {
	color on
	irled off
	ircut on
	echo "Switched to day mode"
	echo "day" > $MODE_FILE
}

switch_to_night() {
	color off
	irled on
	ircut off
	echo "Switched to night mode"
	echo "night" > $MODE_FILE
}

# determine luminance of the scene
value=$(imp-control gettotalgain)
reversed=1
state=$(cat $MODE_FILE 2>/dev/null)

case "$1" in
	night)
		switch_to_night
		;;
	day)
		switch_to_day
		;;
	~ | toggle)
		if [ "$state" = "day" ]; then
			switch_to_night
		else
			switch_to_day
		fi
		;;
	*)
		day_night_max=$(get day_night_max || echo 2400)
		day_night_min=$(get day_night_min || echo 1200)

		echo "$day_night_min - $value - $day_night_max"

		if [ "$reversed" -eq 0 ]; then
			if [ "$value" -lt "$day_night_min" ] && [ "$state" != "day" ]; then
				switch_to_day
			elif [ "$value" -gt "$day_night_max" ] && [ "$state" != "night" ]; then
				switch_to_night
			fi
		else
			if [ "$value" -gt "$day_night_max" ] && [ "$state" != "night" ]; then
				switch_to_night
			elif [ "$value" -lt "$day_night_min" ] && [ "$state" != "day" ]; then
				switch_to_day
			fi
		fi
		;;
esac

quit_clean 0
