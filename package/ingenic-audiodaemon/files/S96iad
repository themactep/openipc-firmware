#!/bin/sh

DAEMON="iad -r -c /etc/iad.json"

. /etc/init.d/rc.common

start() {
	starting
	is_streamer_disabled && quit "Streamer disabled"
	start_daemon
}

stop() {
	stopping
	is_streamer_disabled && quit "Streamer disabled"
	stop_daemon
}

restart() {
	stop || true
	sleep 1
	reload
}

reload() {
	start
}

case "$1" in
	start | stop | restart | reload)
		$1
		;;
	*)
		die "Usage: $0 {start|stop|restart|reload}"
esac

exit 0
