#!/bin/sh

. /etc/init.d/rc.common

start() {
	starting

	wlandev="$(get wlandev)"
	if [ -z "$wlandev" ]; then
		warn "wlandev is empty"
		exit 1
	fi

	gpio_wlan="$(get gpio_wlan)"
	if [ -n "$gpio_wlan" ]; then
		num=${gpio_wlan%[oO]}
		state=${gpio_wlan#$num}

		case "$state" in
			O)
				gpio_cmd="high"
				;;
			o)
				gpio_cmd="low"
				;;
		esac

		info "Set GPIO $num $gpio_cmd"
		gpio $gpio_cmd $num 2>&1 | log
		if [ "$wlandev" == "bcmdhd" ]; then
			gpio unexport $num
		fi

		if [ "$wlandev" == "ssv6155" ]; then
                        gpio toggle $num 2>&1 | log

                fi
	fi

	case "$(fw_printenv -n wlandev)" in
		8189es | 8189fs | atbm6031 | b43 | bcmdhd | hi3881 | ssv6158)
			info "Send INSERT to MMC1"
			mmc 1 2>&1 | log
	esac

	if [ "$(get wlandev)" = "hi3881" ]; then
		sed -i "s/CFG_MAC=[^;]*;/CFG_MAC=$(get wlanmac);/" /etc/wifi_cfg
	fi

	if ! grep -q "^$wlandev " /proc/modules; then
		wlandevopts="$(get wlandevopts)"
		info "Load module $wlandev with $wlandevopts"
		modprobe $wlandev $wlandevopts 2>&1 | log
	fi

	m=50 # limit to 5 seconds
	while [ "$m" -gt 0 ]; do
		grep -q wlan0 /proc/net/wireless && break
		m=$((m-1))
		sleep 0.1
	done

	wlanmac=$(get wlanmac)
	if [ -n "$wlanmac" ]; then
		info "Set MAC address $wlanmac"
		if ! [ "$(get wlandev)" = "hi3881" ]; then
			ip link set dev wlan0 address $wlanmac 2>&1 | log
		fi

	fi
}

case "$1" in
	start)
		start
		;;
	stop)
		true
		;;
	*)
		die "Usage: $0 {start}"
		;;
esac

exit 0
